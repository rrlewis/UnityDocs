<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0" id="io.cordova.myapp6e87643567634da4ba86728612464ba6" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" defaultlocale="en-GB">
